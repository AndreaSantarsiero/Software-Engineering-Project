<VBox fx:id="root" prefHeight="720.0" prefWidth="1280.0" styleClass="Menu" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc11.view.gui.ControllersFXML.AdventurePhase.AdventureControllerLv1">

    <children>

        <!-- Title -->
        <HBox fx:id="headerContainer" alignment="CENTER">
            <children>
                <Label styleClass="Text" text="ADVENTURE PHASE">
                    <font>
                        <Font size="58.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox fx:id="subHeaderContainer">
            <children>
                <HBox fx:id="playersButtons">
               <children>
                  <Label styleClass="Text" stylesheets="@../style.css" text="View Shipboards:   " />
               </children></HBox>
            <HBox fx:id="cheat" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ComboBox fx:id="selectCheat" prefWidth="150.0" />
                        <Button fx:id="cheatButton" mnemonicParsing="false" onAction="#onCheatButtonClick" text="CHEAT" />
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </HBox>
                  <Button fx:id="abortButton" mnemonicParsing="false" onAction="#onAbortButtonClick" text="Abort">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Button>
            </children>
        </HBox>

        <!-- Main Game Layout -->
        <HBox fx:id="mainContainer">

            <!-- CENTER: FlightBoard (background image ) -->
            <StackPane fx:id="boardContainer" HBox.hgrow="ALWAYS">
                <ImageView fx:id="flightBoardImage" preserveRatio="true">
                    <image>
                        <Image url="@../../boards/FlightBoard1.png" />
                    </image>
                </ImageView>
