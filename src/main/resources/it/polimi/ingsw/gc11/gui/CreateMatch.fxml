<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="640.0" prefWidth="860.0" spacing="50.0" styleClass="Menu" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc11.view.gui.ControllersFXML.IdlePhase.CreateMatchController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label styleClass="Text" stylesheets="@style.css" text="CREATE  NEW  MATCH">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="100.0" stylesheets="@style.css">
         <children>
            <ComboBox fx:id="flightType" prefHeight="60.0" prefWidth="300.0" promptText="Flight Type" />
            <ComboBox fx:id="numberOfPlayers" layoutX="365.0" layoutY="20.0" prefHeight="60.0" prefWidth="300.0" promptText="Number of players" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#onEnterButtonClick" text="enter">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" stylesheets="@style.css">
         <children>
            <Label fx:id="label" styleClass="Text" text="error" visible="false">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
