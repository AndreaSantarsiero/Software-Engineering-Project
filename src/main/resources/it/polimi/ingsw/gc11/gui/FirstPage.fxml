      <Button text="PLAY" mnemonicParsing="false" translateY="300"
              prefHeight="82" prefWidth="413"
              style="-fx-background-color: yellow;">
         <font><Font name="System Bold" size="56"/></font>
         <effect><InnerShadow/></effect>
      </Button>
   </children>
